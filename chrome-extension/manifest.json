{
  "name": "Denison Course Calendar Event Generator",
  "version": "0.1",
  "description": "A Chrome Extension that generates calendar events based on student's detail schedule in Self-Service Banner of Denison University.",
  "icons": {
    "32" : "icon32.png",
    "64" : "icon64.png",
    "128" : "icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon" : "icon32.png",
    "default_title" : "There's a 'G' in this URL!"
  },
  "permissions": [
    "declarativeContent"
  ],
  "manifest_version": 2,
  "content_scripts" : [
    {
      "matches" : ["https://web4prod.denison.edu/pls/web4prod/bwskfshd.P_CrseSchdDetl"],
      "js":["course-event-iCal-generator.js", "course-event-CSV-generator.js", "main.js"]
    }
  ]
}
